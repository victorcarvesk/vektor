<?xml version="1.1" encoding="UTF-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:macro name="wheel" params="id radius length distance parent">

    <xacro:if value="${id == 'left'}">
      <xacro:property name="reflect" value="1"/>
    </xacro:if>

    <xacro:if value="${id == 'right'}">
      <xacro:property name="reflect" value="-1"/>
    </xacro:if>

    <xacro:property name="wheel_id" value="${parent}_${id}_wheel"/>
  
    <joint name="${wheel_id}_joint" type="continuous">
      <parent link="${parent}" />
      <child link="${wheel_id}_link" />
      <origin xyz="0 ${distance*reflect} 0" rpy="0 0 0" />
      <axis xyz="0 1 0" />
    </joint>

    <link name="${wheel_id}_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        <geometry>
          <cylinder radius="${radius}" length="${length}" />
        </geometry>
        <xacro:material name="gray" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        <geometry>
          <cylinder radius="${radius}" length="${length}" />
        </geometry>
      </collision>
      <xacro:inertial_cylinder mass="0.1" radius="${radius}" length="${length}" />
    </link>

  </xacro:macro>

</robot>
